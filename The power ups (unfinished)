/**The Power Ups**/

var Immortality = function (x, y) {
    noStroke();
    fill(185, 248, 250);
    triangle(x, y - 43, x + 10, y + 3, x - 10, y + 1);
    fill(138, 85, 5);
    ellipse(x, y, 37, 9);
    ellipse(x, y + 10, 10, 26);
};

var h = function (x, y) {
    var RC = 50;
    
    noStroke();
    fill(138, 85, 5);
    rect(x, y, RC, RC, 5);
};

/**The text**/

var ImmortalityT = function (x, y) {
    textSize(25);
    fill(0, 0, 0);
    text("Immortality", x, y);
};

var hT = function (x, y) {
    textSize(25);
    fill(0, 0, 0);
    text("Idk", x, y);
};

var PowerUps = [Immortality, h];
var TextP = [ImmortalityT, hT];

//The Immortality power up
TextP[0](10, 20);
PowerUps[0](65, 68);

//The Idk power up
TextP[1](160, 20);
PowerUps[1](206, 40);
